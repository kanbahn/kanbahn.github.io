    "typescript": "^3.1.3"
  },
  "scripts": {
    "start": "concurrently --kill-others-on-fail \"nodemon --watch src-backend --watch src-common --ext ts --exec ts-node src-backend/server.ts\" \"react-scripts-ts start\"",
    "start-production-server": "NODE_ENV=production node build-backend/src-backend/server.js",
    "heroku-postbuild": "npm run build && npm run build-backend",
    "build": "react-scripts-ts build",
    "build-backend": "tsc --project ./tsconfig.prod.json",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
